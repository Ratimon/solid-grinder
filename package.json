  },
  "homepage": "https://github.com/Ratimon/solid-grinder#readme"
  ,
  "files": [
    "binary-install.js",
    "install.js",
    "run.js",
    "binary.js",
    "README.md",
    "LICENSE",
    "contracts",
    "cli",
    "Cargo.lock",
    "Cargo.toml"
  ],
  "dependencies": {
    "axios": "^0.26.1",
    "rimraf": "^3.0.2",
